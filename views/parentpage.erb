<div class="page_wrapper">
  <div class="bg-mask">
    <div class="page_panel">
      <div class="page_title">
        <h1>Parentpage</h1>
        <div class="profile_image">
          <div class="profile_image_img">
            <img src="<%= @profile_image %>" alt="">
            <a href="#" id="image_change_open_parent"><i class="fas fa-camera"></i></a>
            <a href="/profile_edit_parent" id="profile_edit_parent"><i class="fas fa-user"></i></a>
          </div>
        </div>
        <h3><%= @last_name %> <%= @first_name %>さん</h3>
      </div>
      <div id="image_change_panel_parent">
        <div class="image_change_button">
          <a href="#" id="image_change_close_parent"><i class="fas fa-times close_button"></i></a>
        </div>
        <div class="image_change_form">
          <form action="/image_change_parent" method="POST" enctype="multipart/form-data">
            <input type="file" name="file" id="file">
            <input type="submit" class="submit_btn" value="変更">
          </form>
        </div>
      </div>
      <div class="round_left"><a class="page_link" href="/logout"><i class="fas fa-sign-out-alt"></i></a></div>
      <div class="round_right"><a class="page_link" href="/reservesitter_list"><i class="fas fa-list-ul"></i></a></div>
      <div class="round_bottom"><a class="page_link" href="/reserve_search">予約検索</a></div>
    </div>
  </div>
</div>
